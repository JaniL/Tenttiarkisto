

<h1>
  <%= @subject.name %>
</h1>

<% if user_is_super_admin %>
  <%= link_to 'Edit', edit_subject_path(@subject) %> |
<% end %>

<h2>Courses</h2>

<% if @subject.courses.empty? %>
  <p>
    No courses available
  </p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Exams</th>
    </tr>
  </thead>
  <tbody>
    <% @subject.courses.each do |course| %>
      <tr>
        <td>
          <%= link_to course.name, course_path(course), class: "btn btn-default" %>
        </td>
        <td>
          <%= course.exams.length %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
