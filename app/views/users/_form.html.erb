<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :organization %><br>
    <%= f.text_field :organization %>
  </div>

  <% if @user.new_record? %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.text_field :password %>
    </div>

  <% end %>

  <%= f.label :subjects %><br>
  <% @subjects.each do |subject| %>
    <%= check_box_tag "user[subject_ids][]", subject.id, @user.subject_ids.include?(subject.id), id: dom_id(subject) %>
    <%= label_tag dom_id(subject), subject.name %>
    <br />
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
